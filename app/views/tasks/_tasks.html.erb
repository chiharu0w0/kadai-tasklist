<ul class="list-unstyled">
  <% tasks.each do |task| %>
  
    <li class="media mb-3">
      <div class="media-body">
        <div>
          <span class="text-muted">posted at
          <%= task.created_at %>
          </span>
        </div>
        <p>
          <%= link_to task.content, task %>
        </p>
      </div>
    </li>
    <% end %>
    <%= paginate tasks %>
</ul>